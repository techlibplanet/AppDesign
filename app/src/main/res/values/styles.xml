<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/app_text_size_large</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <dimen name="app_text_size_large">18sp</dimen>
    <dimen name="app_text_size_xmedium">16sp</dimen>

    <style name="SmallTitleText">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/app_text_size_xmedium</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
