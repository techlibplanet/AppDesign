<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".QuizActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space16dp"
            android:layout_marginEnd="@dimen/space16dp"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                style="@style/TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space10dp"
                android:text="@string/question"
                android:textAlignment="textStart"
                android:textColor="@color/colorWhite" />

            <android.support.v7.widget.CardView
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/option_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space16dp"
                app:cardCornerRadius="@dimen/space5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space5dp"
                        android:layout_marginStart="@dimen/space5dp"
                        android:text="1. "
                        android:textAlignment="textStart" />

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/space10dp"
                        android:paddingBottom="@dimen/space10dp"
                        android:paddingEnd="@dimen/space5dp"
                        android:text="@string/question"
                        android:textAlignment="textStart" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space16dp"
                app:cardCornerRadius="@dimen/space5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space5dp"
                        android:layout_marginStart="@dimen/space5dp"
                        android:text="2. "
                        android:textAlignment="textStart" />

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/space10dp"
                        android:paddingEnd="@dimen/space5dp"
                        android:paddingBottom="@dimen/space10dp"
                        android:text="@string/question"
                        android:textAlignment="textStart" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space16dp"
                app:cardCornerRadius="@dimen/space5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space5dp"
                        android:layout_marginStart="@dimen/space5dp"
                        android:text="3. "
                        android:textAlignment="textStart" />

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/space10dp"
                        android:paddingBottom="@dimen/space10dp"
                        android:paddingEnd="@dimen/space5dp"
                        android:text="@string/question"
                        android:textAlignment="textStart" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space16dp"
                app:cardCornerRadius="@dimen/space5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space5dp"
                        android:layout_marginStart="@dimen/space5dp"
                        android:text="4. "
                        android:textAlignment="textStart" />

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/space10dp"
                        android:paddingBottom="@dimen/space10dp"
                        android:paddingEnd="@dimen/space5dp"
                        android:text="@string/question"
                        android:textAlignment="textStart" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space16dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="@dimen/space5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space5dp"
                        android:layout_marginStart="@dimen/space5dp"
                        android:text="5. "
                        android:textAlignment="textStart" />

                    <TextView
                        style="@style/TitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/space10dp"
                        android:paddingBottom="@dimen/space10dp"
                        android:paddingEnd="@dimen/space5dp"
                        android:text="@string/question"
                        android:textAlignment="textStart" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </ScrollView>


</LinearLayout>